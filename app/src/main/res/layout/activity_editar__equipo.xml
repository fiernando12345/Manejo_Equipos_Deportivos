<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#313131"
    android:layout_height="match_parent"
    tools:context=".Editar_Equipo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:id="@+id/lblNombre"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rama"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:id="@+id/lblRama"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="Partidos Ganados:"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:id="@+id/lblPartidos_Ganados"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="Partidos Perdidos:"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:id="@+id/lblPartidos_Perdidos"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="Sets Ganados:"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:id="@+id/lblSets_Ganados"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="Sets Perdidos:"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:id="@+id/lblSets_Perdidos"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="Puntos obtenidos:"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:id="@+id/lblPuntos_Favor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="Puntos recibidos:"
            android:layout_marginBottom="15sp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:id="@+id/lblPuntos_Contra"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#a2c0d6"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="Agregar un partido"
            android:gravity="center"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#a2c0d6"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="VS:"
                android:layout_marginRight="10sp"
                android:gravity="center"
                android:textColor="#000000" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id="@+id/spnVS"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#a2c0d6"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="Sets:"
                android:layout_marginRight="10sp"
                android:gravity="center"
                android:textColor="#000000" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id="@+id/spnSets"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="Finalizó:"
                android:layout_marginRight="10sp"
                android:gravity="center"
                android:textColor="#000000" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id="@+id/spnSets_Ganados"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#a2c0d6"
            android:gravity="center_horizontal">

            <ToggleButton
                android:id="@+id/togleR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="Ganó"
                android:textOff="Perdió"
                android:textAllCaps="false"/>
            <EditText
                android:id="@+id/editPO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginHorizontal="5sp"
                android:textSize="15sp"
                android:inputType="number"
                android:hint="Puntos Hechos"/>
            <EditText
                android:id="@+id/editPR"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5sp"
                android:textSize="15sp"
                android:inputType="number"
                android:hint="Puntos Recibidos"/>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="#063e20"
            android:id="@+id/btnRegistrarJuego"
            android:text="Registrar Partido"/>
    </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8sp"
            android:text="Eliminar Equipo"
            android:textColor="#ff0000"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:id="@+id/Eliminar"/>

    </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>